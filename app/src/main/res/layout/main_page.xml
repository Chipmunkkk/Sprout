<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.chipmunk.sprout.CustomView.TitleLayout_Common
        android:id="@+id/Title_MainPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/id_FrameLayout_Main"
            android:layout_below="@id/Title_MainPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </ScrollView>

    <com.example.chipmunk.sprout.CustomView.Negative_ButtonLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

