<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.example.chipmunk.sprout.CustomView.TitleLayout_Chat
        android:id="@+id/Title_Chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.example.chipmunk.sprout.CustomView.MyListView
            android:id="@+id/Message_Chat_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#0000"
            android:listSelector="#00000000">
        </com.example.chipmunk.sprout.CustomView.MyListView>
    </ScrollView>
    <com.example.chipmunk.sprout.CustomView.InputBox_Chat
        android:id="@+id/id_inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</LinearLayout>


